<div data-region="course_table"  class="well well-sm">
  <ul class="nav nav-pills">
    <li class = "navbar-search pull-left">
      <input id="{{uniqid}}-courseSearchInput" type="text" name = "searchfield" class="search-query" placeholder = "Suchen">
      <!-- <button type="submit" class="btn">Search</button>-->
    </li>
  </ul>

  <div class="table-responsive">
  <table id = "{{uniqid}}-courseTable" class = "datatable table-condensed table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>{{#str}}fullnamecourse{{/str}}</th>
        <th>{{#str}}department{{/str}}</th>
        <th>{{#str}}semester, tool_supporter{{/str}}</th>
        <th>{{#str}}visible{{/str}}</th>
      </tr>
    </thead>
    <tbody data-region="user_table_body">
      {{#courses}}
      <tr>
        <td>{{id}}</td>
        <td>{{fullname}}</td>
        <td>{{fb}}</td>
        <td>{{semester}}</td>
        <td>{{visible}}</td>
      </tr>
      {{/courses}}
    </tbody>
  </table>
  </div>
</div>

{{#js}}
 require(['tool_supporter/table_search', 'tool_supporter/load_information', 'tool_supporter/datatables', 'tool_supporter/table_sort'],
        function(search, click_on_course, dataTable, sort){
   search.searchEvent('#{{uniqid}}-courseSearchInput','#{{uniqid}}-courseTable' + ' tbody'); //Add search functionality to the search field
   click_on_course.click_on_course('#{{uniqid}}-courseTable' + ' tbody'); //Load information about the clicked course
