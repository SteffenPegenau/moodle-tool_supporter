<form class = "navbar-search pull-left">
  <input type="text" name = "searchfield" class="search-query" placeholder = "Suchen">
  <button type="submit" class="btn">Search</button>
</form>
<div class="table-responsive">
<table class = "table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Short name</th>
      <th>Direct course category</th>
      <th>Parent course category</th>
    </tr>
  </thead>
  <tbody>
    {{#courses}}
    <tr>
      <td>{{id}}</td>
      <td>{{fullname}}</td>
      <td>{{shortname}}</td>
      <td>{{category}}</td>
      <td>{{parent_category}}</td>
    </tr>
    {{/courses}}
  </tbody>
<table>
</div>
