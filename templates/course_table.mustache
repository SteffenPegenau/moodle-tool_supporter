{{!

    @template tool_supporter/course_table
    Template which outputs a table of courses.

    Classes required for JS:
    * dataTables

    Context variables required for this template:
    * courses - array of arrays: course details to be displayed in a table.

    Example Input structure:
    Array ( [courses] =>
    	Array
    	(
    		[12] => Array (
	            [id] => 51
	            [fullname] => FB01 Kurs full name
	            [visible] => 1
	            [fb] => FB01 Rechts- und Wirtschaftswissenschaften
	            [semester] => WiSe 2016/17 )
    		[13] => Array (
	            [id] => 52
	            [fullname] => FB02 Kurs full name
	            [visible] => 1
	            [fb] => FB02 Gesellschafts- und Geschichtswissenschaften
	            [semester] => WiSe 2016/17 )
    	)
    )

}}
<div data-region="course_table" class="card" style="border:1px solid #8a8a8a">
	<div class = "card-header">
	    <div class="col-sm-6"><h2>{{#str}}courses{{/str}}</h2></div>
	    <div class="col-sm-6 pull-right"><div class="pull-right"><button class="btn" id="btn_refresh_courses">{{#pix}} a/refresh, core, refresh {{/pix}}</button></td></div></div>
	</div>

	<div class="btn-toolbar" role="toolbar">
		<div class="btn-group" role="group">
			<select id="course_table_column_chooser" class="form-control-">
				<!-- Additional Options will be added later with javascript -->
				<option selected value="-1">{{#str}}all{{/str}}</option>
			</select>
		</div>
		<div class="btn-group" role="group">
			<input type="text" id="course_table_search_input" class="form-control form-control-sm" placeholder="Search">
		</div>
	</div>
	
	<!-- Filtering for course table -->
	<div id ="course_filtering" data-region = "course_filtering">
	   <ul class="nav nav-tabs nav-justified">
	   	<!-- Filter course list by selecting wanted parent/category -->
	     <li class="nav-item dropdown">
	       <a class = "nav-link dropdown-toggle" href="javascript:void(0)" data-toggle="dropdown">{{#str}}department, tool_supporter{{/str}}<span class="caret"></span></a>
	       <!--filter course list by selecting wanted parent-->
	       <ul class="dropdown-menu" id="courses_departmentdropdown">
	         {{#uniquecategoryname}}
	         	<li class = "dropdown-item">
	         		<label><input type="checkbox" value="{{{.}}}" name="courses_departmentcheckbox"  id="courses_departmentcheckbox"> {{{.}}}</label>
	         	</li>
	         {{/uniquecategoryname}}
	       </ul>
	     </li>
	    <!-- Filter course list by selecting wanted grand parent-->
	     <li class="nav-item dropdown">
	       <a class = "nav-link dropdown-toggle" href="javascript:void(0)" data-toggle="dropdown">{{#str}}semester, tool_supporter{{/str}}<span class="caret"></span></a>
	       <ul class="dropdown-menu" id="courses_semesterdropdown">
	         {{#uniqueparentcategory}}
	         	<li class = "dropdown-item">
	         		<label><input type="checkbox" value="{{{.}}}" name="courses_semestercheckbox" id="courses_semestercheckbox"> {{{.}}}</label>
	         	</li>
	         {{/uniqueparentcategory}}
	       </ul>
	     </li>
	  </ul>
	</div>

	<div class = "table table-responsive">
	  <table id = "{{uniqid}}-courseTable" class="stripe hover row-border compact" cellspacing="0" width="100%">
	    <thead>
	      <tr>
	        <th>ID  </th>
	        <th>{{#str}}shortnamecourse{{/str}}</th>
	        <th>{{#str}}fullnamecourse{{/str}}</th>
	        <th>{{#str}}department, tool_supporter{{/str}}</th>
	        <th>{{#str}}semester, tool_supporter{{/str}}</th>
	        <th>{{#str}}visible{{/str}}</th>
	      </tr>
	    </thead>
	    <tbody>
	    </tbody>
	  </table>
	</div>
</div>

{{#js}}
require(['tool_supporter/load_information', 'jquery', 'core/ajax', 'core/notification', 'core/templates', 'tool_supporter/datatables'],
    function(load_information, $, ajax, notification, templates, datatables) {

		var columns1 = [
		                {data: 'id', name: 'ID'},
		                {data: 'shortname', "visible": false, "searchable": true, name: '{{#str}}shortnamecourse{{/str}}'},
		                {data: 'fullname', name: '{{#str}}fullnamecourse{{/str}}'},
		                {data: 'fb', name: '{{#str}}department, tool_supporter{{/str}}'},
		                {data: 'semester', name: '{{#str}}semester, tool_supporter{{/str}}'},
		                {data: 'visible', name: '{{#str}}visible{{/str}}'}
		            ];
		
		// Convert the table to dataTable and apply Filtering      
		datatables.dataTable_ajax('#{{uniqid}}-courseTable', 'tool_supporter_get_courses',{}, 'courses', columns1);
		
		// Refresh this table
		load_information.click_on_refresh('#{{uniqid}}-userTable', 'tool_supporter_get_users', {}, 'users', columns1);
		
		// Load detailed information about the clicked course
		load_information.click_on_course('#{{uniqid}}-courseTable'); //Load information about the clicked course
		
		// Search the table
		load_information.search('#{{uniqid}}-courseTable', '#course_table_column_chooser', '#course_table_search_input', columns1);
  });
{{/js}}
