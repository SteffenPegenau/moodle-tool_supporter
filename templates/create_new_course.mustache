<div data-region="create_new_course" class="well well-sm">

  <table>
    <tr>
      <td>Vollständiger Name:</td>
      <td><input type="text" placeholder = "Vollständiger Kursname" id="new_course_full_name_input"></td>
    </tr>
    <tr>
      <td>Kurzer Name:</td>
      <td><input type="text" placeholder = "Kurzer Kursname" id="new_course_short_name_input"></td>
    </tr>
    <tr>
      <td>Kursbereich:</td>
      <td>
        <select id="new_course_category_input">
          {{#categories}}
          <option value="{{id}}">{{id}}, {{name}}</option>
          {{/categories}}
        </select>
      </td>
    </tr>
    <tr>
      <td>Sichtbar:</td>
      <td><input id="new_course_is_visible" type="checkbox" name="is_visible"></td>
    </tr>
  </tr>
  </table>
  <td><button class="btn" id="create_new_course_button">Kurs anlegen</button></td>
</div>

{{#js}}
 require(['tool_supporter/create_new_course'], function(create_new_course){
   create_new_course.create_new_course();
 });
{{/js}}
