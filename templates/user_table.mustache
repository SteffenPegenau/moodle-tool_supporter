{{!
    @template tool_supporter/user_table
    Template which outputs a table of users.

    Classes required for JS:
    * dataTables

    Context variables required for this template:
    * users - array of arrays: user details to be displayed in a table.

    Example Input structure:
    Array ( [users] =>
    	Array (
    	[0] => Array (
    		[id] => 1
    		[username] => guest
    		[firstname] => Guest user
    		[lastname] =>
    		[email] => root@localhost )
    	[1] => Array (
    		[id] => 2 [username] => admin
    		[firstname] => Admin
    		[lastname] => User
    		[email] => dummy@gmx.de )
    	)
    )

}}
<div data-region="user_table"  class="card">
    <div class="card-block">
        <h2 class="card-title">{{#str}}users{{/str}}</h2>
        <div class = "table table-responsive">
         <table class = "stripe hover row-border compact" id = "{{uniqid}}-userTable" cellspacing="0" width="100%">
           <thead>
             <tr>
               <th>ID  </th>
               <th>{{#str}}username{{/str}}  </th>
               <th>{{#str}}firstname{{/str}}  </th>
               <th>{{#str}}lastname{{/str}}  </th>
               <th>{{#str}}email{{/str}}  </th>
             </tr>
           </thead>
           <tbody>
           </tbody>
         </table>
       </div>
    </div>
</div>

{{#js}}
require(['tool_supporter/load_information', 'jquery', 'core/ajax', 'core/notification', 'core/templates', 'tool_supporter/datatables'],
function(load_information, $, ajax, notification, templates, datatables){


var columns = [
                 { data: 'id' },
                 { data: 'username' },
                 { data: 'firstname' },
                 { data: 'lastname' },
                 { data: 'email' }
             ];
datatables.dataTable_ajax('#{{uniqid}}-userTable', 'tool_supporter_get_users',{}, 'users', columns);

load_information.click_on_user('#{{uniqid}}-userTable tbody'); //Load information about the clicked user

 });
{{/js}}
