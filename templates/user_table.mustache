<div data-region="user_table"  class="well well-sm">
  <form class = "navbar-search pull-left">
    <input id="{{uniqid}}-userSearchInput" type="text" name = "searchfield" class="search-query" placeholder = "Suchen">
    <!-- <button type="submit" class="btn">Search</button> -->
  </form>

  <div class="table-responsive">
  <table class = "table-condensed table-hover table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>{{#str}}username{{/str}}</th>
        <th>{{#str}}firstname{{/str}}</th>
        <th>{{#str}}lastname{{/str}}</th>
        <th>{{#str}}email{{/str}}</th>
      </tr>
    </thead>
    <tbody id = "{{uniqid}}-userTableBody" data-region="user_table_body">
      {{#users}}
      <tr>
        <td>{{id}}</td>
        <td>{{username}}</td>
        <td>{{firstname}}</td>
        <td>{{lastname}}</td>
        <td>{{email}}</td>
      </tr>
      {{/users}}
    </tbody>
  </table>
  </div>
</div>

{{#js}}
 require(['tool_supporter/table_search'], function(search){
   search.searchEvent('#{{uniqid}}-userSearchInput','#{{uniqid}}-userTableBody');
 });
 require(['tool_supporter/load_information'], function(click_on_user){
   click_on_user.click_on_user('#{{uniqid}}-userTableBody');
 });
{{/js}}
