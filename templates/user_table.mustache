<div data-region="user_table"  class="well well-sm">
  <form class = "navbar-search pull-left">
    <input id="{{uniqid}}-userSearchInput" type="text" name = "searchfield" class="search-query" placeholder = "Suchen">
    <!-- <button type="submit" class="btn">Search</button> -->
  </form>

  <div class="table-responsive">
  <table class = "datatable table-condensed table-hover table-bordered" id = "{{uniqid}}-userTable">
    <thead>
      <tr>
        <th>ID</th>
        <th>{{#str}}username, tool_supporter{{/str}}</th>
        <th>{{#str}}firstname, tool_supporter{{/str}}</th>
        <th>{{#str}}lastname, tool_supporter{{/str}}</th>
        <th>{{#str}}email, tool_supporter{{/str}}</th>
      </tr>
    </thead>
    <tbody data-region="user_table_body">
      {{#users}}
      <tr>
        <td>{{id}}</td>
        <td>{{username}}</td>
        <td>{{firstname}}</td>
        <td>{{lastname}}</td>
        <td>{{email}}</td>
      </tr>
      {{/users}}
    </tbody>
  </table>
  </div>
</div>

{{#js}}
