<!--View details after clicking on a user in user table.  -->
<div style="display: none" data-region="user_details">
  <div class="navbar" >
    <div class="navbar-inner">
      <a class="brand" href="#">{{userName}}</a>
      <ul class="nav">
        <!-- Place for buttons like "Show User", "close detail information"-->
      </ul>
    </div>
  </div>
<!--Show user details  -->
    <table class = "table borderless">
      <tbody>
        {{#userinformation}}
        <tr>
          <th>ID</th>
          <td>{{id}}</td>
        </tr>
        <tr>
          <th>TU-ID</th>
          <td>{{username}}</td>
        </tr>
        <tr>
          <th>Vorname</th>
          <td>{{firstname}}</td>
        </tr>
        <tr>
          <th>Nachname</th>
          <td>{{lastname}}</td>
        </tr>
        <tr>
          <th>E-Mail Adresse</th>
          <td>{{email}}</td>
        </tr>
        <tr>
          <th>timecreated</th>
          <td>{{timecreated}}</td>
        </tr>
        <tr>
          <th>timemodified</th>
          <td>{{timemodified}}</td>
        </tr>
        {{/userinformation}}
      </tbody>
    <table>

  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="#">Kurse</a>
      <ul class="nav">
        <li class="dropdown">
          <a class = "dropdown-toggle" href="#" data-toggle="dropdown">
            Semester
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            {{#semesters}}
            <li>
              <label class="checkbox">
                <input type="checkbox" name="semesters"> {{name}}
              </label>
            </li>
            <li><a href="#"> {{name}}</a></li> <!--filter course list by selecting wanted grand parent-->
            {{/semesters}}
          </ul>
        </li>
        <li class="dropdown">
          <a class = "dropdown-toggle" href="#" data-toggle="dropdown">
            Fachbereich
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            {{#fachbereiche}}
            <li><a href="#"> {{name}}</a></li> <!--filter course list by selecting wanted parent-->
            {{/fachbereiche}}
          </ul>
        </li>
        <form class ="navbar-search">
          <input id="{{uniqid}}-userCourseSearch" type="text" class="search-query" placeholder="Search"> <!--Search field for searching in tables below-->
        </form>
      </ul>
    </div>
  </div>

  <div class="table-responsive">
  <table class = "table-condensed table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>FB (direct course category)</th>
        <th>Semester</th>
        <th>visible</th>
      </tr>
    </thead>
    <tbody id="{{uniqid}}-userCourseTableBody">
      {{#usercourses}}
      <tr>
        <td>{{id}}</td>
        <td>{{fullname}}</td>
        <td>{{categoryname}}</td>
        <td>{{category}}</td>
        <td>{{visible}}</td>
      </tr>
      {{/usercourses}}
    </tbody>
  </table>
  </div>

</div>
</div></div></div></div></div></div></div>

