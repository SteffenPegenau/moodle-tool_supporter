{{#js}}
require(['tool_supporter/table_search', 'tool_supporter/table_sort', 'tool_supporter/datatables', 'tool_supporter/load_information'],
      function(search, sort, dataTable, click_on_course){
  //for input field
  search.searchEvent('#usercoursessearch','#{{uniqid}}-userdetailcourses' + ' tbody');
  //for radio buttons in dropdown
  search.filterEvent('departmentradios','#{{uniqid}}-userdetailcourses', '#departmentdropdown', 2);
  search.filterEvent('semesterradios','#{{uniqid}}-userdetailcourses', '#semesterdropdown', 4);
  //sort Table - slow sorting algorithm
  //sort.sortTable('#{{uniqid}}-userdetailcourses');
//  dataTable.use_dataTable('#{{uniqid}}-userdetailcourses');  //Convert table to DataTable
  click_on_course.click_on_course('#{{uniqid}}-userdetailcourses' + ' tbody'); //Load information about the clicked course
});

require(['tool_supporter/load_information'], function(hide_user_details){
  hide_user_details.hide_user_details();
});
{{/js}}
