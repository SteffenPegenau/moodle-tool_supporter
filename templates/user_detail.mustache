<!--View details after clicking on a user in user table.  -->
<div style="display: none" data-region="user_details">
  <div class="navbar" >
    <div class="navbar-inner">
      <a class="brand" href="#">{{#userinformation}}{{username}}{{/userinformation}}</a>
      <p class="navbar-btn">
        <a href="{{loginaslink}}" class="btn btn-default" id="btn_login_as">{{#str}}loginas{{/str}}</a>
      </p>
      <!-- something like https://moodle.tu-darmstadt.de/course/loginas.php?id=1&user=12&sesskey=2gsrWI7fVD -->
    </div>
  </div>
<!--Show user details  -->
    <table class = "table-condensed table-hover table borderless">
      <tbody>
        {{#userinformation}}
        <tr>
          <th>ID</th>
          <td>{{id}}</td>
        </tr>
        <tr>
          <th>{{#str}}username{{/str}}</th>
          <td>{{username}}</td>
        </tr>
        <tr>
          <th>{{#str}}firstname{{/str}}</th>
          <td>{{firstname}}</td>
        </tr>
        <tr>
          <th>{{#str}}lastname{{/str}}</th>
          <td>{{lastname}}</td>
        </tr>
        <tr>
          <th>{{#str}}email{{/str}}</th>
          <td>{{email}}</td>
        </tr>
        <tr>
          <th>{{#str}}timecreateduser, tool_supporter{{/str}}</th>
          <td>{{timecreated}}</td>
        </tr>
        <tr>
          <th>{{#str}}timemodifieduser, tool_supporter{{/str}}</th>
          <td>{{timemodified}}</td>
        </tr>
        {{/userinformation}}
      </tbody>
    </table>

  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="#">Kurse</a>
      <ul class="nav">
        <li class="dropdown">
          <a class = "dropdown-toggle" href="#" data-toggle="dropdown">{{#str}}semester, tool_supporter{{/str}}</a>
          <ul class="dropdown-menu">
            {{#userscourses}}
            <li><input type="checkbox" name="semesters" checked> {{parentcategory}}</li> <!--filter course list by selecting wanted grand parent-->
            {{/userscourses}}
          </ul>
        </li>
        <li class="dropdown">
          <a class = "dropdown-toggle" href="#" data-toggle="dropdown">{{#str}}department, tool_supporter{{/str}}</a>
          <ul class="dropdown-menu">
            {{#userscourses}}
            <li><input type="checkbox" name="fachbereiche" checked> {{categoryname}}</li><!--filter course list by selecting wanted parent-->
            {{/userscourses}}
          </ul>
        </li>
          <input id="{{uniqid}}-userCourseSearch" type="text" class="search-query" placeholder="Search"> <!--Search field for searching in tables below-->
      </ul>
    </div>
  </div>

  <div class="table-responsive">
  <table class = "table-condensed table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>{{#str}}fullnamecourse{{/str}}</th>
        <th>{{#str}}department{{/str}}</th>
        <th>{{#str}}roles{{/str}}</th>
        <th>{{#str}}semester, tool_supporter{{/str}}</th>
        <th>{{#str}}visible{{/str}}</th>
      </tr>
    </thead>
    <tbody id="{{uniqid}}-userCourseTableBody">
      {{#userscourses}}
      <tr>
        <td>{{id}}</td>
        <td>{{fullname}}</td>
        <td>{{categoryname}}</td> <!-- TUD intern: Fachbereiche -->
        <td>{{roles}}</td> <!-- TUD intern: Fachbereiche -->
        <td>{{parentcategory}}</td> <!-- TUD intern: Semester -->
        <td>{{visible}}</td>
      </tr>
      {{/userscourses}}
    </tbody>
  </table>
  </div>

</div>

